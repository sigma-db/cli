{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES2020",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true
  },
  "include": [
    "src/**/*"
  ]
}